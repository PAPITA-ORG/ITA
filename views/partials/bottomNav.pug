        if view_data
            each icon in view_data.auth
                if icon.href
                    a(href=icon.href)
                        img(src=icon.src alt=icon.alt id= icon.icon_id class=icon.icon_class)                       
                else 
                    img(src=icon.src alt=icon.alt id= icon.icon_id class=icon.icon_class)
