extends layout

block content

    div(class="container")
        div(class='row align-items-center justify-content-center')
          div(class="col-md-12" style="margin-top: 20px")
            img(src="/images/personaje-01.svg" width="200px" height="200px")
            
            p 
              | Hola, soy 
              strong ITA
              |, tu compania virtual 
              | para actividades infantiles.
            
            div(class="col-md-12")
            form(action="#")
              div.label Ingresa
              div.username
                input(type="text" placeholder="correo electronico")
              div.password
                input(type="password" placeholder="contrase√±a")
              div.checkbox
                input(type='checkbox' name='agreement' checked)
                |  Recuerdame
              button(type='button' class='btn btn-success' id='btn-no') Siguiente
              div.social
                button(type="button" class="btn-floating btn-lg btn-fb") <i class="fa fa-facebook"></i>
                button(type="button" class="btn-floating btn-lg btn-gplus") <i class="fa fa-google-plus"></i>
    
          div(class="col-md-12 " style="margin-top: 20px")
            p
              | Aun no has usado
              strong  ITA    
              | ?  
              button(type='button' class='btn btn-success' id='btn-si') Pruebame ahora
            
          div(class="col-md-12")               
            p
              | Quieres saber mas?    
              button(type='button' class='btn btn-success' id='btn-team') Equipo ITA

        script(src="/js/index.js")
    