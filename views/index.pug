extends layout

block content

    h1 ITA

    div(class="container")
        div(class='row align-items-center justify-content-center')
            div(class="col-md-12")
                p Hola, soy 
                 strong ITA
                 |, tu compania virtual para actividades infantiles.

    div(class="container")
        div(class='row align-items-center justify-content-center')
            div(class="col-md-12")
    
            form(action="#")
              div.label login form
              div.username
                input(type="text" placeholder="username")
              div.password
                input(type="password" placeholder="password")
              div.checkbox
                input(type='checkbox' name='agreement' checked)
                |Remember me
              button(type="button") login
              h3 or login with
              div.social
                button(type="button") <i class="fa fa-facebook"></i>
                button(type="button") <i class="fa fa-google-plus"></i>
              p
                | not a member
                a(href="#") Sing Up now

    div(class="container")
        div(class='row align-items-center justify-content-center')
          div(style="margin-top: 40px")
            div(class="col-md-12")
                iframe(width="560" height="315" src="https://www.youtube.com/embed/3e7Fp3D3YL8" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)

    script(src="/js/index.js")
    