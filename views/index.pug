extends layout

block content

    div.container-index(class="container")
        div(class='row align-items-center center' id='index-container')
          
          div(class="col-sm-12 center")
            img#ita-logo.mt-4(src="/images/ita3d_1.png")
            
            h4
              | Hola! soy 
              strong ITA
              |, tu compania virtual 
              | para actividades infantiles saludables.
                    
            form#login-form(action="/api/usuarios/login", method='post')
              
              if registro_msg
                div.alert.alert-success.alert-dismissible.fade.show(role="alert")=registro_msg
                  button.close(type="button" data-dismiss='alert' aria-label='Close')
                    span(aria-hidden='true') &times;
              if success_msg!= ''
                div.alert.alert-success.alert-dismissible.fade.show(role="alert")=success_msg
                  button.close(type="button" data-dismiss='alert' aria-label='Close')
                    span(aria-hidden='true') &times;
              if error_msg!= ''
                div.alert.alert-warning.alert-dismissible.fade.show(role="alert")=error_msg
                  button.close(type="button" data-dismiss='alert' aria-label='Close')
                    span(aria-hidden='true') &times;
              div.label
                h4 Ingresa a tu cuenta
              div.username
                input(type="text" placeholder="correo electronico" name='correo')
              div.password
                input(type="password" placeholder="contraseña" name='password')
              button.mt-4(type='submit' class='btn btn-primary' id='btn-login') Siguiente
              div.mt-3.mb-2.col-sm-12
                a.btn.btn-info#forgot-password(href='/registro') Olvidaste tu contraseña?   
              div.mt-5.col-sm-12
                h4 Aun no tienes una cuenta?
              div.mt-4.col-sm-12
                a.btn.btn-primary.btn-lg.btn-block#btn-sobre(href='/sobre') Registrate ya!

                

        script(src="/js/index.js")
